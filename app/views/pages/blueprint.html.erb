<div class="project-card-wrapper agent">
  <div class="heading d-flex">
    <h4>Blueprint</h4>
    <h4>â€“</h4>
    <h4><%= @project.name %></h4>
  </div>
  <div class="project-card-controller">
    <% if @project.stages.length > 0 %>
      <% @project.stages.each do |stage| %>
        <div class="project-card">
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to stage.name, section_path(stage.sections.first) %>
            <div class="circle"></div>
          </div>
          <% stage.sections.each do |section| %>
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to section.name, section_path(section), class: 'text' %>
              <div class="circle"></div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'shared/footer', project: @project, call: @call %>

