<div class="one-input">
  <div class="form-inputs">
    <%= f.input_field :_destroy, as: :hidden %>
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, '#', class: 'remove_record' %>
    <%= f.input :name, label: false, placeholder: 'Stage' %>
  </div>
  <div class='section-fields'>
    <%= f.simple_fields_for :sections do |builder| %>
      <%= render 'section', f: builder %>
    <% end %>
  </div>
  <div class="form-action">
    <%= link_to_add_fields('Add Section', f, :sections, class: 'new-add-fields callguru-button btn add-section-button') %>
  </div>
</div>


