<div class="form-inputs">
  <%= f.input :name, wrapper_html: { class: 'project-form-input' } %>
  <%= f.input :goal, wrapper_html: { class: 'project-form-input' } %>
</div>

<div class='stage-fields'>
  <%= f.simple_fields_for :stages do |builder| %>
    <%= render 'stage', f: builder %>
  <% end %>
</div>
<div class="form-actions">
  <%= f.button :submit, class: 'callguru-button d-none project-button' %>
  <div class="callguru-button btn next-step">Next Step</div>
  <%= link_to_add_fields('Add Stage', f, :stages, class: 'add-stage-button btn callguru-button d-none') %>
</div>

