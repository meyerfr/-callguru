<table class="users-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Status</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= full_name(user) %></td>
        <td><%= user.email %></td>
        <td><%= user_status(user) %></td>
        <td><%= link_to 'Delete', user_path(user), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= simple_form_for(User.new, url: user_invitation_path) do |f| %>
  <%= f.input :email, placeholder: 'Email', label: false %>
  <%= f.submit 'Invite User', class: 'btn callguru-button' %>
<% end %>
