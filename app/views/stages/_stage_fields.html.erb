<fieldset>
  <%= f.label :name, "Question" %><br />
  <%= f.input :name %><br />
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, "Remove Question" %>
  <%= f.fields_for :section do |builder| %>
    <%= render 'section_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add Section", f, :sections %>
</fieldset>
